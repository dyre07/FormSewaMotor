<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl3037.formsewamotor.MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="RENTAL MOTOR WIDYA"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="#050505" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/textView"
            android:src="@drawable/motor" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="19dp"
            android:text="Nama" />

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextAlamat"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/editTextAlamat"
            android:layout_below="@+id/imageView"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextAlamat"
            android:layout_alignBottom="@+id/editTextAlamat"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Alamat" />

        <EditText
            android:id="@+id/editTextAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioGroup"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/radioGroup"
            android:layout_below="@+id/textView2"
            android:layout_toEndOf="@+id/textView"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextAlamat"
            android:text="Jenis Kelamin" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextAlamat"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/textView4">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Pria" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="wanita" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextLama"
            android:layout_alignBottom="@+id/editTextLama"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Lama Sewa" />

        <EditText
            android:id="@+id/editTextLama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/checkBoxH"
            android:layout_alignLeft="@+id/checkBoxH"
            android:layout_alignRight="@+id/checkBoxH"
            android:layout_alignStart="@+id/checkBoxH"
            android:layout_below="@+id/spinnerMotor"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editTextLama"
            android:text="Accessories" />

        <CheckBox
            android:id="@+id/checkBoxH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/radioGroup"
            android:layout_alignLeft="@+id/radioGroup"
            android:layout_alignRight="@+id/radioGroup"
            android:layout_alignStart="@+id/radioGroup"
            android:layout_below="@+id/editTextLama"
            android:checked="false"
            android:text="Helm" />

        <CheckBox
            android:id="@+id/checkBoxJH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/checkBoxH"
            android:layout_alignLeft="@+id/checkBoxH"
            android:layout_alignRight="@+id/checkBoxH"
            android:layout_alignStart="@+id/checkBoxH"
            android:layout_below="@+id/checkBoxH"
            android:checked="false"
            android:text="Jas Hujan" />

        <CheckBox
            android:id="@+id/checkBoxM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/checkBoxJH"
            android:layout_alignLeft="@+id/checkBoxJH"
            android:layout_alignRight="@+id/checkBoxJH"
            android:layout_alignStart="@+id/checkBoxJH"
            android:layout_below="@+id/checkBoxJH"
            android:checked="false"
            android:text="Masker" />

        <Button
            android:id="@+id/buttonSewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editTextLama"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/editTextLama"
            android:layout_below="@+id/checkBoxM"
            android:text="Sewa" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/radioGroup"
            android:layout_marginTop="19dp"
            android:text="Jenis Motor" />

        <Spinner
            android:id="@+id/spinnerMotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonSewa"
            android:layout_alignLeft="@+id/editTextLama"
            android:layout_alignRight="@+id/buttonSewa"
            android:layout_alignStart="@+id/editTextLama"
            android:layout_alignTop="@+id/textView7"
            android:entries="@array/JenisMotor" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonSewa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/buttonSewa"
            android:layout_below="@+id/buttonSewa" />

    </RelativeLayout>
</ScrollView>